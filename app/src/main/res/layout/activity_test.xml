<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wzrd.v.activity.message.PhotoljActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        >

        <ImageView
            android:id="@+id/iv_photoback"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:gravity="left"
            android:background="@color/colorPrimary"
            android:src="@mipmap/icon_titlebar_back" />


        <TextView
            android:id="@+id/tv_photocomplete"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:gravity="right|center_vertical"
            android:text="完成"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:orientation="vertical"
        >


    <com.yyx.beautifylib.view.BLBeautifyImageView
        android:id="@+id/beautify_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"/>

    <com.muzhi.camerasdk.library.views.HorizontalListView
        android:id="@+id/effect_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:layout_centerVertical="true" />
    </LinearLayout>

</LinearLayout>
