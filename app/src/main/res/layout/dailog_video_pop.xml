<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/felife_back_bg"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_more"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/white_9"
                android:textSize="18sp"
                android:text="更多"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@color/white_9"/>
            <TextView
                android:id="@+id/tv_send"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/blue_0"
                android:textSize="18sp"
                android:text="发送"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_9"/>
            <TextView
                android:id="@+id/tv_rename"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/blue_0"
                android:textSize="18sp"
                android:text="重命名"
                android:layout_gravity="center"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_9"/>
            <TextView
                android:id="@+id/tv_del"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#f00"
                android:textSize="18sp"
                android:text="删除"
                android:layout_gravity="center"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#192028"/>
        <LinearLayout
            android:id="@+id/ll_cancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/felife_back_bg"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="取消"
                android:textSize="18sp"
                android:textColor="@color/blue_0"
                android:layout_gravity="center"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
</layout>


