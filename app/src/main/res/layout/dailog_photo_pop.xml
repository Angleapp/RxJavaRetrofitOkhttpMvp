<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp">

            <ImageView
                android:id="@+id/iv_photoback"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:gravity="left"
                android:src="@mipmap/fenxi_on" />


            <TextView
                android:id="@+id/tv_photocomplete"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:gravity="right|center_vertical"
                android:text="完成"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" />

        <com.yyx.beautifylib.view.BLBeautifyImageView
            android:id="@+id/blbeautify_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#969696" />

        <com.muzhi.camerasdk.library.views.HorizontalListView
            android:id="@+id/hlv_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>