<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.wzrd.v.activity.message.TextActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1A2027"
        >

        <ImageView
            android:id="@+id/iv_message_back"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/icon_titlebar_back" />

        <TextView
            android:id="@+id/tv_tile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:gravity="center"
            android:text="消息"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tv_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#000"
        >
        <TextView
            android:id="@+id/tv_shy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="很难在面对面的时候说出的话："
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/red"
            android:visibility="gone"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/iv_bage"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            android:text="切换信纸"
            android:textColor="@color/white"
           android:gravity="right"
            android:textSize="18sp"
        />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fl_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/a19049ea3874d0bb4837f114095abd601">



            <EditText
                android:id="@+id/et_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:background="@null"
                android:gravity="top|left"

                />


        </FrameLayout>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@id/fl_text" />

    </RelativeLayout>
</LinearLayout>
