<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@mipmap/bg_blured"
              tools:context="com.wzrd.v.activity.contacts.ContanctsMessageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#CC1A2027">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.5dp"
            android:src="@mipmap/icon_month_last"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="dfd"
            android:textColor="@color/white"
            android:textSize="17sp"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rb_a"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/left_mail_title_bg_selector"
                android:gravity="center"
                android:text="收件箱"
                android:textColor="@drawable/video_tab_text"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/rb_b"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/right_mail_title_bg_selector"
                android:gravity="center"
                android:text="发件箱"
                android:textColor="@drawable/video_tab_text"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>

    <com.wzrd.v.view.NoScrollViewPager
        android:id="@+id/vp_concatns"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"/>

</LinearLayout>
