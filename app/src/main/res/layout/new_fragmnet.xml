<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/pic_new_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp">

        <TextView
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            android:text="To:"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/input_circle_bg"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp">

            <TextView
                style="@style/textStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Monica"/>

            <EditText
                style="@style/textStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:inputType="number"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/sendMessage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_new_send"/>
    </LinearLayout>

    <com.wzrd.v.view.CircleLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        app:circleRadius="140">

        <LinearLayout
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_new_message"/>

            <TextView
                style="@style/subTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/blue_circle_dot"
                android:drawablePadding="4dp"
                android:text="消息"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_new_gift"/>

            <TextView
                style="@style/subTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/blue_circle_dot"
                android:drawablePadding="4dp"
                android:text="虚拟礼物"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/poem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_new_poem"/>

            <TextView
                style="@style/subTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/blue_circle_dot"
                android:drawablePadding="4dp"
                android:text="诗歌"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_new_shy"/>

            <TextView
                style="@style/subTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/blue_circle_dot"
                android:drawablePadding="4dp"
                android:text="口难开"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/selfie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_new_selfile"/>

            <TextView
                style="@style/subTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/blue_circle_dot"
                android:drawablePadding="4dp"
                android:text="自拍"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wisdom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_new_wisdom"/>

            <TextView
                style="@style/subTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/blue_circle_dot"
                android:drawablePadding="4dp"
                android:text="智慧之语"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/offline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_new_offline"/>

            <TextView
                style="@style/subTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/blue_circle_dot"
                android:drawablePadding="4dp"
                android:text="线下"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_new_end"/>

            <TextView
                style="@style/subTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/blue_circle_dot"
                android:drawablePadding="4dp"
                android:text="结束语"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_new_video"/>

            <TextView
                style="@style/subTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/blue_circle_dot"
                android:drawablePadding="4dp"
                android:text="短视频"/>
        </LinearLayout>

    </com.wzrd.v.view.CircleLinearLayout>
</LinearLayout>